:root {
  --primary-color: #07C160;
  --primary-gradient: #F7F7F7;
  --card-background: #fff;
  --text-color: #333;
  --text-color-secondary: #666;
  --text-color-light: #999;
  --border-color: #E5E5E5;
  --highlight-gradient: #E8F5E9;
  --primary-light: #E8F5E9;
  --shadow-normal: 0 2rpx 8rpx rgba(7,193,96,0.04);
  --shadow-hover: 0 4rpx 16rpx rgba(7,193,96,0.08);
  --shadow-active: 0 1rpx 4rpx rgba(7,193,96,0.12);
  --primary-glow: 0 0 8rpx #07C16033;
}

body, .container {
  background: #F7F7F7;
}

.title-bar, .account-name, .modal-title {
  color: #333;
}

.account-username, .account-update, .empty-state-text, .empty-state-desc, .label {
  color: #666;
}

.card, .account-list, .modal-content, .container {
  background: #fff;
  border-color: #E5E5E5;
}

.card, .account-list, .modal-content {
  box-shadow: none;
}

.btn-primary, .tag-primary {
  color: #fff;
  background: #07C160;
  border-color: #07C160;
}

.btn-info {
  color: #fff;
  background: #07C160;
  border-color: #07C160;
}

.btn-default {
  color: #07C160;
  border-color: #E5E5E5;
  background: #E8F5E9;
}

.container {
  min-height: 100vh;
  padding: 24rpx 24rpx 0 24rpx;
  box-sizing: border-box;
  background: linear-gradient(135deg, #f6f6f6 0%, #ffffff 100%);
  position: relative;
  overflow: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle at center,
    rgba(7, 193, 96, 0.1) 0%,
    transparent 70%
  );
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.title-bar {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
  margin: 32rpx 0 36rpx 0;
  padding-left: 0;
  position: relative;
}

.title-bar::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 38rpx;
  background: #07C160;
  border-radius: 4rpx;
  margin-right: 18rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  letter-spacing: 2rpx;
  padding: 0 24rpx;
  border-left: 6rpx solid #1890ff;
  background: rgba(24, 144, 255, 0.1);
  border-radius: 8rpx;
  height: 56rpx;
  line-height: 56rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.title::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: var(--transition-normal);
}

.title:hover::before {
  left: 100%;
}

.add-btn,
.address-btn,
.refresh-btn,
.logout-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  border: none;
  letter-spacing: 2rpx;
}

.add-btn {
  background: #07C160;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.08);
}

.address-btn {
  background: #07C160;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(7,193,96,0.08);
}

.refresh-btn {
  background: #fff;
  color: #333;
  border: 2rpx solid #E5E5E5;
  box-shadow: none;
}

.logout-btn {
  background: #e54d42;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(229,77,66,0.08);
}

/* ÂéªÈô§ÂéüÊúâÊåâÈíÆmargin-topÔºåÁªü‰∏ÄÁî®margin-bottomÊéßÂà∂Èó¥Èöî */
.add-btn,
.address-btn,
.refresh-btn,
.logout-btn {
  margin-top: 0;
}

.account-list {
  margin-top: var(--spacing-normal);
}

.account-item {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: var(--border-radius-normal);
  padding: var(--spacing-large);
  margin-bottom: var(--spacing-normal);
  box-shadow: var(--shadow-normal);
  transition: var(--transition-normal);
  animation: slideUp 0.6s ease-out;
  position: relative;
  overflow: hidden;
}

.account-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: var(--transition-normal);
}

.account-item:hover::before {
  left: 100%;
}

.account-item:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-active);
}

.account-info {
  flex: 1;
}

.account-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-normal);
}

.account-name {
  font-size: var(--font-size-normal);
  font-weight: bold;
  color: var(--text-color);
  margin-right: var(--spacing-normal);
  flex: 1;
  position: relative;
}

.account-name::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 0;
  width: 40rpx;
  height: 3rpx;
  background: var(--primary-gradient);
  border-radius: 2rpx;
  box-shadow: var(--primary-glow);
  transition: var(--transition-normal);
}

.account-item:hover .account-name::after {
  width: 100%;
}

.account-details {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-mini);
}

.account-username {
  font-size: var(--font-size-small);
  color: var(--text-color-secondary);
  background: var(--background-color);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  transition: var(--transition-normal);
}

.account-item:hover .account-username {
  background: var(--primary-light);
  color: var(--primary-color);
  box-shadow: var(--primary-glow);
}

.account-update {
  font-size: var(--font-size-mini);
  color: var(--text-color-light);
}

.account-type {
  font-size: 24rpx;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  box-shadow: var(--primary-glow);
  transition: var(--transition-normal);
}

.account-item:hover .account-type {
  transform: scale(1.05);
}

.account-actions {
  display: flex;
  gap: var(--spacing-normal);
  margin-top: var(--spacing-normal);
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: var(--border-radius-normal);
  font-size: var(--font-size-small);
  font-weight: 500;
  transition: var(--transition-normal);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: var(--transition-normal);
}

.action-btn:hover::before {
  left: 100%;
}

.action-btn.switch {
  background: var(--primary-gradient);
  color: #ffffff;
  box-shadow: var(--shadow-glow);
}

.action-btn.delete {
  background: var(--danger-color);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.2);
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-active);
}

/* Á©∫Áä∂ÊÄÅÊ†∑Âºè */
.empty-state {
  text-align: center;
  padding: var(--spacing-large) 0;
  animation: fadeIn 0.6s ease-out;
  position: relative;
  z-index: 1;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-normal);
  opacity: 0.8;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.empty-state-text {
  font-size: var(--font-size-normal);
  color: var(--text-color);
  margin-bottom: var(--spacing-mini);
  display: block;
  position: relative;
}

.empty-state-text::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: var(--primary-gradient);
  border-radius: 2rpx;
  box-shadow: var(--primary-glow);
}

.empty-state-desc {
  font-size: var(--font-size-small);
  color: var(--text-color-secondary);
}

.refresh-btn {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  color: var(--text-color);
  border: 2rpx solid var(--border-color);
  border-radius: var(--border-radius-normal);
  font-size: var(--font-size-normal);
  font-weight: 500;
  transition: var(--transition-normal);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-mini);
  position: relative;
  overflow: hidden;
}

.refresh-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(7, 193, 96, 0.1),
    transparent
  );
  transition: var(--transition-normal);
}

.refresh-btn:hover::before {
  left: 100%;
}

.refresh-btn:active {
  background: var(--background-color);
  transform: translateY(2rpx);
}

