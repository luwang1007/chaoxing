.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.45);
  z-index: 1;
}

.modal-content {
  position: relative;
  z-index: 2;
  width: 90vw;
  max-width: 520rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 48rpx 36rpx 36rpx 36rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: var(--transition-normal);
}

.modal-content:hover::before {
  left: 100%;
}

.modal-header {
  text-align: center;
  margin-bottom: var(--spacing-large);
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  letter-spacing: 2rpx;
}

.modal-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: var(--primary-gradient);
  border-radius: 2rpx;
  box-shadow: var(--primary-glow);
}

.modal-body {
  margin-bottom: var(--spacing-large);
}

.input-group {
  width: 100%;
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  width: 100%;
  height: 96rpx;
  background: #fff;
  border: 1.5rpx solid #E5E5E5;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 0;
  transition: border-color 0.2s, background 0.2s;
  outline: none;
}

.input:focus {
  border-color: #07C160;
  background: #fff;
}

.input:focus + .label {
  color: var(--primary-color);
  transform: translateY(-2rpx);
}

::placeholder {
  color: #999;
  font-size: 32rpx;
}

.modal-footer {
  width: 100%;
  display: flex;
  gap: 24rpx;
  margin-top: 24rpx;
}

.cancel-btn {
  flex: 1;
  height: 80rpx;
  background: #fff;
  color: #666;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: background 0.2s, color 0.2s;
}

.cancel-btn:active {
  background: #F7F7F7;
}

.confirm-btn {
  flex: 1;
  height: 80rpx;
  background: #07C160;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: background 0.2s;
}

.confirm-btn:active {
  background: #05a150;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes modalIn {
  from {
    opacity: 0;
    transform: translateY(20rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.credentials-list {
  margin-top: 20rpx;
}

.credential-item {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.credential-info {
  flex: 1;
}

.main-account {
  font-size: 24rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.credential-actions {
  display: flex;
  gap: 20rpx;
}

.switch-btn {
  background-color: #07c160;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.delete-btn {
  background-color: #ff4d4f;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.add-form {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.form-content {
  background-color: white;
  width: 80%;
  padding: 30rpx;
  border-radius: 12rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
}

.account-name {
  margin-top: 8rpx;
}

.refresh-all-btn {
  width: 100%;
  margin-top: 40rpx;
  background: linear-gradient(90deg, #1ecb7a 0%, #13b26b 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  box-shadow: 0 4rpx 16rpx 0 rgba(30,203,122,0.12);
  border: none;
}

.fullpage-loading {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.85);
  z-index: 9999;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #E5E5E5;
  border-top: 8rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #333;
  letter-spacing: 2rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

