:root {
  --primary-color: #07C160;
  --primary-gradient: #F7F7F7;
  --card-background: #fff;
  --text-color: #333;
  --text-color-secondary: #666;
  --text-color-light: #999;
  --border-color: #E5E5E5;
  --highlight-gradient: #E8F5E9;
  --primary-light: #E8F5E9;
  --shadow-normal: 0 2rpx 8rpx rgba(7,193,96,0.04);
  --shadow-hover: 0 4rpx 16rpx rgba(7,193,96,0.08);
  --shadow-active: 0 1rpx 4rpx rgba(7,193,96,0.12);
  --primary-glow: 0 0 8rpx #07C16033;
}

body, .container {
  background: #F7F7F7;
}

.title, .parody-title {
  color: #333;
}

.parody-info, .parody-desc {
  color: #666;
}

.card, .parody-list, .container {
  background: #fff;
  border-color: #E5E5E5;
}

.card, .parody-list {
  box-shadow: none;
}

.btn-primary {
  color: #fff;
  background: #07C160;
  border-color: #07C160;
}

.parody-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f7f8fa;
}

.parody-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff9800;
  margin-bottom: 40rpx;
}

.parody-title.power-btn {
  font-size: 60rpx;
  font-weight: 900;
  background: linear-gradient(90deg, #ff9800 0%, #ff3c3c 100%);
  -webkit-background-clip: text;
  color: transparent;
  text-shadow: 2rpx 4rpx 12rpx #ff9800, 0 2rpx 8rpx #ff3c3c;
  letter-spacing: 6rpx;
  text-align: center;
  margin-bottom: 48rpx;
  user-select: none;
  cursor: pointer;
}

.parody-content {
  font-size: 32rpx;
  color: #333;
}

.parody-welcome {
  font-size: 36rpx;
  color: #07c160;
  margin-bottom: 32rpx;
  font-weight: bold;
  text-align: center;
}

.parody-modal-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.parody-modal {
  background: #fff;
  border-radius: 18rpx;
  padding: 48rpx 36rpx 36rpx 36rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(0,0,0,0.12);
  min-width: 480rpx;
  max-width: 90vw;
  text-align: center;
}

.parody-modal-title {
  font-size: 36rpx;
  color: #07c160;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.parody-modal-title.red {
  color: #e64340;
}

.parody-modal-title.green {
  color: #07c160;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  text-align: center;
}

.parody-modal-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 32rpx;
}

.parody-modal-btn {
  background: linear-gradient(90deg, #1ecb7a 0%, #13b26b 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  padding: 16rpx 0;
  width: 100%;
  font-weight: bold;
}

.parody-accounts {
  margin-top: 60rpx;
  width: 90vw;
  max-width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx 0 rgba(0,0,0,0.06);
  padding: 32rpx 24rpx;
}

.parody-accounts-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 24rpx;
}

.parody-account-item {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
  justify-content: space-between;
}

.parody-account-info {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.parody-account-username {
  font-size: 28rpx;
  color: #333;
  margin-right: 32rpx;
}

.parody-account-name {
  font-size: 28rpx;
  color: #888;
}

.parody-account-edit-btn {
  min-width: 60rpx;
  padding: 0 16rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 8rpx;
  background: #07c160;
  color: #fff;
  border: none;
  font-size: 24rpx;
  margin-left: 8rpx;
}

.parody-account-edit-input {
  flex: 1 1 120rpx;
  min-width: 120rpx;
  max-width: 220rpx;
  margin-right: 8rpx;
  height: 48rpx;
  line-height: 48rpx;
  box-sizing: border-box;
}

.parody-password-input {
  width: 100%;
  margin-bottom: 24rpx;
  border: 1rpx solid #e5e6eb;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  height: 48rpx;
  line-height: 48rpx;
  box-sizing: border-box;
} 